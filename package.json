{
  "name": "swae",
  "version": "0.0.14",
  "description": "A service worker testing framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "git@github.com:asakusuma/swae.git",
  "author": "asakusuma <asa.kusuma@gmail.com>",
  "license": "MIT",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "scripts": {
    "serve": "tsc -p test/tsconfig.json && nodemon test/dist/test/server/standalone.js",
    "build": "tsc",
    "build-test": "tsc -p test/tsconfig.json",
    "watch": "tsc -w -p test/tsconfig.json",
    "lint": "tslint  -c tslint.json --project tslint.json 'src/**/*.ts' 'test/server/**/*.ts' 'test/unit/**/*.ts' 'test/acceptance/**/*.ts'",
    "test": "rm -rf test/dist && yarn run lint && yarn run build-test && mocha test/dist/test/**/*.spec.js --timeout 15000",
    "test-unit": "yarn run build-test && mocha test/dist/test/unit/**/*.spec.js --timeout 5000",
    "document": "./build-docs.sh"
  },
  "dependencies": {
    "chrome-debugging-client": "^0.6.0"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^1.2.1",
    "@microsoft/api-extractor": "^5.7.1",
    "@types/chai": "^4.1.3",
    "@types/express": "^4.11.1",
    "@types/mocha": "^5.2.0",
    "@types/node": "^9.6.6",
    "chai": "^4.1.2",
    "express": "^4.16.3",
    "global": "^4.3.2",
    "mocha": "^5.0.4",
    "morgan": "^1.9.0",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  }
}
